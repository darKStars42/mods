{
    "Format": "2.0.0",
    "ConfigSchema": {
        "Enable Breads and Buns": {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Adds a multitude of breads to the game in the form of cooking recipes",
            "Section": "Breads and Buns"
        },
         "Breads Chef's Selection": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Adds a carefully curated selection of breads to the game. It's less overwhelming than the default Breads and Buns",
            "Section": "Breads and Buns"
        },
        "Breads as Artisan Goods": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Converts the breads added by this mod from cooking recipes to artisan goods",
            "Section": "Breads and Buns"
        },
        "Enable Cakes and Cream": {
            "AllowValues":"true, false",
            "Default": "true",
            "Description": "Adds a multitude of cakes and sweetened cream to the game in the form of cooking recipes",
            "Section": "Cakes and Cream"
        },
        "Cakes as Artisan Goods": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Converts the cakes added by this mod from cooking recipes to artisan goods",
            "Section": "Cakes and Cream"
        },
        "Enable Jams and Pies": {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Adds a variety of pizzas to the game as artisan goods",
            "Section": "Jams and Pies"
        },
        "Enable Puffs and Pastries": {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Adds a multitude of various pastries to the game in the form of cooking recipes",
            "Section": "Puffs and Pastries"
        },
        "Enable Pizza": {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Adds a variety of pizzas to the game as artisan goods",
            "Section": "Pizzas"
        },
        "Simple Pizza": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Simplifies the pizza added by this mod by removing the sliced variants",
            "Section": "Pizzas"
        },
        "Use Other Butter": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Allows for butter added by other mods to be used in this mod's recipes",
            "Section": "Recipe Tweaks"
        },
        "Use Rosa's Meats": {
            "AllowValues":"true, false",
            "Default": "false",
            "Description": "Utilize specific meats added by Rosa's meat mod in certain recipes",
            "Section": "Recipe Tweaks"
        },
        "Use Animal Husbandry Meat": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Utilize specific meats added by the Animal Husbandry mod in certain recipes",
            "Section": "Recipe Tweaks"
        },
        "Use Generic Meat": {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Generalizes all meat recipes to use non-specific meat-based inputs",
            "Section": "Recipe Tweaks"
        } 
        // Include in Perfection 
        // Enable Recipe Progression
        // Pastries as Artisan Goods
        // Pies as Cooking Recipes
        // Pizzas as Cooking Recipes
 
    },
