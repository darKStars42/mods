/*

    This file adds the default tourists for the Central Station location.

*/
{
    "$schema": "https://smapi.io/schemas/content-patcher.json",

    "Changes": [
        // load empty file
        {
            "Action": "Load",
            "Target": "Mods/{{MainModId}}/Tourists",
            "FromFile": "assets/empty.json"
        },

        // add default tourists
        {
            "Action": "EditData",
            "Target": "Mods/{{MainModId}}/Tourists",
