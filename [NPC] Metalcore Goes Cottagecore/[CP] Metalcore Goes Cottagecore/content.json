{
	"Format": "2.4.0",
	"ConfigSchema": {
		"PortraitStyle": {
			"AllowValues": "NinTheCactus, Original",
			"Default": "Original",
			"AllowBlank": false,
			"Description": "Choose which portrait style to use"
		},
		"Exclude From Perfection": {
			"AllowValues": "true, false",
			"Default": "false",
			"AllowBlank": false,
			"Description": "Excludes MGC items from Perfection"
		}
	},
	"DynamicTokens": [
		{
			"Name": "WeekDayList",
			"Value": "Sun, Mon, Tue, Wed, Thu, Fri, Sat"
		},
		{
			"Name": "WeekDay",
			"Value": "{{WeekDayList |valueAt={{Query: {{Day}}%7}}}}"
		},
		{
			"Name": "FestivalYearCheck",
			"Value": ""
		},
		{
			"Name": "FestivalYearCheck",
			"Value": "_y2",
			"When": {
				"Query: {{Year}} % 2 = 1": false
			}
		},
		{
			"Name": "NicknameChange",
			"Value": "{{i18n:Name.Cambria}}",
			"When": {
				"HasSeenEvent |contains=MGC.Cambria.06": false
			}
		},
		{
			"Name": "NicknameChange",
			"Value": "{{i18n:Name.Castle}}",
			"When": {
				"HasSeenEvent |contains=MGC.Cambria.06": true
			}
		},
		{
			"Name": "OrchidRain",
			"Value": "0 TenebrousNova.EliDylan.CP_ESEDHouse 25 7 2 OrchidRoost/2300 25 8 2 OrchidRoost",
			"When": {
				"HasMod |contains=TenebrousNova.EliDylan.CP": true,
				"Weather": "Storm, GreenRain"
			}
		},
		{
			"Name": "OrchidRain",
			"Value": "610 Squeaks.MGC.CP_CCHouse 15 21 2 OrchidRoost/2300 16 21 2 OrchidRoost"
		},
		{
			"Name": "FamilyMail",
			"Value": "{{i18n:CambriaHouse.String.FamilyMail.1}}",
			"When": {
				"Hearts:Otter.Cambria": "0, 1, 2"
			}
		},
		{
			"Name": "FamilyMail",
			"Value": "{{i18n:CambriaHouse.String.FamilyMail.2}}",
			"When": {
				"Hearts:Otter.Cambria": "3, 4"
			}
		},
		{
			"Name": "FamilyMail",
			"Value": "{{i18n:CambriaHouse.String.FamilyMail.3}}",
			"When": {
				"Hearts:Otter.Cambria": "5, 6"
			}
		},
		{
			"Name": "FamilyMail",
			"Value": "{{i18n:CambriaHouse.String.FamilyMail.4}}",
			"When": {
				"Hearts:Otter.Cambria": "7, 8, 9, 10"
			}
		}
	],
	"Changes": [
		{
			"LogName": "Custom Music",
			"Action": "EditData",
			"Target": "Data/AudioChanges",
			"Entries": {
				"MGC.Theme": {
					"ID": "MGC.Theme",
					"Category": "Music",
					"FilePaths": [
						"{{AbsoluteFilePath: Assets/Music/MGCTheme.ogg}}"
					],
					"StreamedVorbis": true,
					"Looped": true
				}
			}
		},
		{
			"LogName": "Blank File Load",
			"Action": "Load",
			"Target": "Characters/Dialogue/Otter.Cambria, Characters/Dialogue/Otter.Orchid, Characters/Schedules/Otter.Cambria, Characters/Schedules/Otter.Orchid",
			"FromFile": "Assets/blank.json"
		},
		{
			"Action": "Include",
			"FromFile": "Data/AppearanceData.json, Data/Dialogue/Cambria_Dialogue.json, Data/Schedules/Cambria_Schedule.json, Data/Animations.json, Data/Cambria_Strings.json, Data/Cambria_Events.json, Data/Mail.json, Data/Dialogue/ConversationTopics.json, Data/Dialogue/FestivalDialogue.json, Data/FestivalLocations.json, Data/Dialogue/Orchid_Dialogue.json, Data/Schedules/Orchid_Schedule.json, Data/DogPathing.json, Data/NPCData.json, Data/Quests.json, Data/Shops.json, Data/TriggerActions.json, Data/LocationData.json, Data/MovieData.json, Data/Objects.json, Data/Dialogue/CustomGiftDialogue.json, Data/Crops.json, Data/Machines.json"
		}
	]
}