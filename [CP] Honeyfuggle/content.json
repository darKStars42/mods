{
    "$schema": "https://smapi.io/schemas/content-patcher.json",
    "Format": "2.7.0",
    "ConfigSchema": {
        "SeasonalOutfits": {
            "AllowValues": "full, vanilla",
            "Default": "full"
        },
        "ImmersiveMode": {
            "AllowValues": "true, false",
            "Default": "true"
        },
        "Perfection": {
            "AllowValues": "true, false",
            "Default": "true"
        },
    },

    "DynamicTokens": [
        {
            "Name": "Honeyfuggle",
