//■■■別json読み込み■■■

  //●カスタムマップのロケーションデータ(順度優先)
      {
        "Action": "Include",
        "FromFile": "assets/json/00_LocationsData.json"
      },

  //●共通項目とバニラの編集
      {
        "Action": "Include",
        "FromFile": "assets/json/10_Vanilla_Common.json",
        "When": { "Enable this mod": "true" }
      },

  //●牧草地エリア(投棄された農場)の復興
      {
        "Action": "Include",
        "FromFile": "assets/json/11_PastureArea_Reconstruction.json",
        "When": { "Enable this mod": "true" }
      },

  //●他Modとの互換性編集(Stardew Valley Expanded)
      {
        "Action": "Include",
        "FromFile": "assets/json/20_Mod_StardewValleyExpanded.json",
        "When": {
            "Enable this mod": "true",
            "HasMod: |contains=FlashShifter.StardewValleyExpandedCP": "true"
        }
      },

  //●他Modとの互換性編集(Stardew Valley Reimagined 3)
      {
        "Action": "Include",
        "FromFile": "assets/json/21_Mod_StardewValleyReimagined3.json",
        "When": { 
            "Enable this mod": "true",
            "HasMod: |contains=FlashShifter.StardewValleyExpandedCP": "false",
            "Stardew Valley Reimagined 3 ver": "true"
        }
      },

  //●他Modとの互換性編集(Desert AfforestationArea)
      {
        "Action": "Include",
        "FromFile": "assets/json/22_Mod_DesertAfforestationArea.json",
        "When": { 
            "Enable this mod": "true",
            "HasMod: |contains=Tikamin557.DesertAfforestationArea": "true",
            "Link DesertAfforestationArea": "true"
        }
      },

  //●オベリスク関連
      {
        "Action": "Include",
        "FromFile": "assets/json/97_ObeliskData.json",
        "When": { "Enable this mod": "true" }
      },
  //●メール関連データ(トリガーアクション含)
      {
        "Action": "Include",
        "FromFile": "assets/json/98_Mail_TriggerActionsData.json",
        "When": { "Enable this mod": "true" }
      },

  //●その他の編集(椅子データ、テキストボックス翻訳関係)
      {
        "Action": "Include",
        "FromFile": "assets/json/99_OtherEdits.json",
        "When": { "Enable this mod": "true" }
      }



    ]//▼▼"Changes"の終了▼▼
