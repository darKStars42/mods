			"LogName": "Trigger action to add mail flag for tracking loaded default secondborn.",
            "Action": "EditData",
            "Target": "Data/TriggerActions",
            "Entries": {
                "{{ModId}}_Add_Default_Secondborn": {
                    "Id": "{{ModId}}_Add_Default_Secondborn",
                    "Trigger": "DayStarted siliconmodding.GVChildrenSMAPI_OnConfigChangedLate",
                    "Action": "AddMail Host {{ModId}}_Default_Secondborn Received",
					"MarkActionApplied": false,
                },
                "{{ModId}}_Add_GrowingValley_Secondborn_{{SecondbornGender}}": {
                    "Id": "{{ModId}}_Add_GrowingValley_Secondborn_{{SecondbornGender}}",
                    "Trigger": "DayStarted siliconmodding.GVChildrenSMAPI_OnConfigChangedLate",
                    "Action": "AddMail Current GrowingValley_Secondborn_{{SecondbornGender}} Received",
					"MarkActionApplied": false,
                },
			}
		},
   
