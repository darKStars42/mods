        },

        {
            "LogName": "PITV Map Loads",
            "Action": "Load",
            "Target": "Maps/CommunityCenterPride",
            "FromFile": "Assets/Maps/CommunityCenter_Pride.tmx"
        },

        {
            "LogName": "Loads From Blanks",
            "Action": "Load",
            "Target": "Strings/schedules/Kent",
            "FromFile": "Data/blank.json"
        },

		{
			"LogName": "PITV Data Includes",
			"Action": "Include",
			"FromFile": "Data/Items/GiftTasteData.json, Data/Items/ObjectData.json, Data/Items/RecipesData.json, Data/NPCs/QuestData.json, Data/NPCs/MailData.json, Data/NPCs/EventData.json, Data/NPCs/NPCDialogue.json, Data/Festival/FestivalData.json, Data/Festival/FestivalSchedules.json, Data/Festival/ScheduleStrings.json, Data/Festival/ShopData.json, Data/NPCs/TriggerActions.json"
		},

        {
            "LogName": "Include DSV Compatibility",
            "Action": "Include",
            "FromFile": "Data/Compat/DSVCompat.json",
            "When": {
                "HasMod |contains= DSVTeam.DiverseStardewValley": true
            }
        },

        {
            "LogName": "Include RSV Compatibility",
            "Action": "Include",
            "FromFile": "Data/Compat/RSVSchedules.json, Data/Compat/RSVStrings.json",
