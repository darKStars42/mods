{
  "Format": "2.7.0",
  "ConfigSchema": {
    "Pregnancy or Adoption": {
      "AllowValues": "Pregnancy, Adoption",
      "Default": "Adoption",
      "Description": "Changes whether you have kids with Riley via pregnancy or adoption, if Pregnancy is selected; Riley will always be the one to become pregnant."
    },
    "Seasonal Outfits": {
      "AllowValues": "On, Off",
      "Default": "On",
      "Description": "Enables or disables Riley's seasonal outfits"
    }
  },
